#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer


composer update
npm install

FILE=setup
if test -f "$FILE"; then
    echo "Running setup"
    ./setup
else
    echo "Setup does not exists"
fi

service cron start &
service supervisor start &